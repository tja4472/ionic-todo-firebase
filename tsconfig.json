{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // strict
    // "noUnusedParameters": true,
    // "noUnusedLocals": true,
    "strict": true,
    // "alwaysStrict": true,
    // "noImplicitAny": true,
    // "noImplicitThis": true,  
    // https://github.com/Microsoft/TypeScript/issues/10078
    // "strictNullChecks": false,
    //
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/test.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}